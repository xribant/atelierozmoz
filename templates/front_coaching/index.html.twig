{% extends 'base.html.twig' %}

{% block title %}Coaching & Accompagnement
{% endblock %}

{% block bodyType %}<body class="sub_page">{% endblock %}
{% block content %}
</body>
</div>

<!-- Prochaines sessions -->
<section class="infos-formations">
	<div class="container">
		<div class="row">
			<div class="col-lg-12" data-aos="fade-right">
				<h1 class="mt-5 mb-5">
					<i class="fa-solid fa-user-group"></i>
					Accompagnement individuel et coaching...
				</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 col-md-12" data-aos="fade-up">

				<p>
					Des accompagnements individuels sont également proposés aux enfants, ados et adultes. 
                    N’hésitez pas à consulter nos offres et à nous contacter pour une prise de rendez-vous. 
				</p>
			</div>
		</div>
	</div>
</section>
<!-- Fin prochaines sessions -->

<!-- Liste des formations -->
  <section class="infos-sessions"> 
    <div class="container">
      <div class="row mt-5">
      
           {% for coaching in coachings %}
              <div class="col-lg-4 col-md-6 col-sm-1"> 
                <div class="card">
                  <div class="event-img" style="background-image: url('{{ vich_uploader_asset(coaching, 'imageFile') }}');"></div>
                  <div class="card-body">
                    <h2 class="card-title">{{ coaching.title }}</h2>

                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal{{ coaching.uid }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel"><i class="fa-solid fa-circle-info"></i> Description</h5>
                            </div>
                            <div class="modal-body">
                              {{ coaching.description|raw }}
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('app_contact') }}"><i class="fa-solid fa-envelope"></i> Contact</a>
                       	{% if coaching.description == true %}
                        	<a class="ml-3" href="" data-toggle="modal" data-target="#exampleModal{{ coaching.uid }}"><i class="fa-solid fa-circle-info"></i> Détails</a>
                      	{% endif %}
                    </div>
                  </div>
                </div>
              </div>
        
            {% endfor %}
       
      </div>
    </div>
  </section>
  <!-- Fin liste des formations -->

{% endblock %}
