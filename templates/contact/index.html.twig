{% extends 'base.html.twig' %}

{% block title %}Contactez moi{% endblock %}

{% block content %}
<body class="sub_page">
 <!-- contact section -->
    <section class="contact-section">
      <div class="container">

        <div class="col-lg-12 mt-5 mb-5">

          <div class="row">
              <div class="col-lg-6 col-md-6" data-aos="fade-up">
                <h1>
                    contactez <span>moi</span>
                </h1>
              </div>
          </div>
          <div class="row">
              <div class="col-lg-6 col-md-6" data-aos="fade-up">
                  <div class="form_container">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate' }}) }}
                    {{ form_row(form._token) }}
                      <form action="" method="post">
                        {{ form_row(form.name) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.message) }}
                        {{ form_row(form.captcha) }}
                        <button>Envoyer</button>
                      </form>
                    {{ form_end(form) }} 
                  </div>
              </div>
              <div class="col-lg-6 col-md-6 d-flex justify-content-center align-items-center" data-aos="fade-left">
                  <img src="{{ asset('build/post_office.png') }}" alt="">
              </div>
          </div>

        </div>

      </div>
    </section>
    <!-- end contact section -->
    
{% endblock %}
