{% extends 'base.html.twig' %}

{% block title %}Inscription à {{ event.workshop.title }} | {{ event.title }}{% endblock %}

{% block bodyType %}<body class="sub_page">{% endblock %}

{% block content %}

 </div>

  <!-- Formulaire inscription -->
  <section class="front-registration"> 
    <div class="container">

      <div class="row">
        <div class="col-lg-12" data-aos="fade-right">
          <h2 class="mt-5 mb-5">
            Inscription à <span class="workshop">{{ event.workshop.title }}</span> - {{ event.title }}
          </h2>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-10" data-aos="fade-up">
          <div class="card">
              
              {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
              {{ form_row(form._token) }}
                  <form id="eventRegistrationForm" action="" method="post">
                      <div class="card-content">
                          <div class="row">
                    
                              <div class="col-lg-6">
                                  <div class="form-group col-lg-12 {% if form_errors(form.firstName) %}has-error{% endif %}">
                                      <label class="control-label">
                                          Prénom<star>*</star>
                                      </label>
                                      {{ form_row(form.firstName) }}
                                  </div>
                              </div>    
                              <div class="col-lg-6">
                                  <div class="form-group col-lg-12 {% if form_errors(form.lastName) %}has-error{% endif %}">
                                      <label class="control-label">
                                          Nom<star>*</star>
                                      </label>
                                      {{ form_row(form.lastName) }}
                                  </div>
                              </div>    
                              <div class="col-lg-6">
                                  <div class="form-group col-lg-12 {% if form_errors(form.email) %}has-error{% endif %}">
                                      <label class="control-label">
                                          E-Mail<star>*</star>
                                      </label>
                                      {{ form_row(form.email) }}
                                  </div>
                              </div>    
                               <div class="col-lg-6">
                                  <div class="form-group col-lg-12 {% if form_errors(form.born_at) %}has-error{% endif %}">
                                      <label class="control-label">
                                          Date de naissance<star>*</star>
                                      </label>
                                      {{ form_row(form.born_at) }}
                                  </div>
                              </div>  
                              <div class="col-lg-6">
                                  <div class="form-group col-lg-12 {% if form_errors(form.address) %}has-error{% endif %}">
                                      <label class="control-label">
                                          Rue et n°<star>*</star>
                                      </label>
                                      {{ form_row(form.address) }}
                                  </div>
                              </div>    
                              <div class="col-lg-2">
                                  <div class="form-group col-lg-12 {% if form_errors(form.postal_code) %}has-error{% endif %}">
                                      <label class="control-label">
                                          C.P.<star>*</star>
                                      </label>
                                      {{ form_row(form.postal_code) }}
                                  </div>
                              </div>    
                              <div class="col-lg-4">
                                  <div class="form-group col-lg-12 {% if form_errors(form.city) %}has-error{% endif %}">
                                      <label class="control-label">
                                          Localité<star>*</star>
                                      </label>
                                      {{ form_row(form.city) }}
                                  </div>
                              </div>   
                               <div class="col-lg-12">
                                    <div class="form-group col-lg-12 d-flex justify-content-start">
                                        {{ form_row(form.newsletter) }}
                                    </div>
                              </div>   
                              {{ form_row(form.recaptcha) }}
                             <div class="col-lg-12">
                                  <div class="category mb-3"><star>*</star>Champs obligatoires</div>
                                    <div class="col-lg-12">
                                      <button class="btn-subscription">S'inscrire</button>
                                      <a class="back-btn ml-2" href="{{ path('app_agenda') }}">Annuler</a>
                                    </div>
                              </div>

                          </div>
                      </div>
                  </form>
              {{ form_end(form) }}
                
          </div>
        </div>
      </div>
     
    </div>
  </section>
  <!-- Fin Formulaire inscription -->

{% endblock %}




