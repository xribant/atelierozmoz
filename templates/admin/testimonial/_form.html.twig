{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
    <form id="testimonialForm" action="" method="post">
        <div class="card-content">
            <div class="row">

                <div class="col-lg-12">
                    <div class="form-group col-lg-12 {% if form_errors(form.author) %}has-error{% endif %}">
                        <label class="control-label">
                            Auteur <star>*</star>
                        </label>
                        {{ form_row(form.author) }}
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group col-lg-12 {% if form_errors(form.message) %}has-error{% endif %}">
                        <label class="control-label">
                            Message <star>*</star>
                        </label>
                        {{ form_row(form.message) }}
                    </div>
                </div>
                <div class="col-lg-12">    
                    <div class="category"><star>*</star> Champs obligatoires</div>
                    <div class="card-footer">
                        <a class="btn btn-danger btn-fill pull-right" href="{{ path('app_testimonial_index') }}" style="margin-left: 1rem;">Annuler</a>
                        <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
        </div>
    </form>
{{ form_end(form) }}

