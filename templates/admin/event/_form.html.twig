{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
    <form id="newEventForm" action="" method="post">
        <div class="card-content">
            <div class="row">

                <div class="col-lg-6">
                    <div class="form-group {% if form_errors(form.workshop) %}has-error{% endif %}">
                        <label class="control-label">
                            Atelier<star>*</star>
                        </label>
                        {{ form_row(form.workshop) }}
                    </div>
                    <div class="form-group {% if form_errors(form.title) %}has-error{% endif %}">
                        <label class="control-label">
                            Intitulé<star>*</star>
                        </label>
                        {{ form_row(form.title) }}
                    </div>
                    <div class="form-group {% if form_errors(form.description) %}has-error{% endif %}">
                        <label class="control-label">
                            Description
                        </label>
                        {{ form_row(form.description) }}
                    </div>
                </div>    
                
                <div class="col-lg-6">
                    <div class="form-group col-lg-6 {% if form_errors(form.duration) %}has-error{% endif %}">
                        <label class="control-label">
                            Durée
                        </label>
                        {{ form_row(form.duration) }}
                    </div>
                    <div class="form-group col-lg-6 {% if form_errors(form.price) %}has-error{% endif %}">
                        <label class="control-label">
                            Prix<star>*</star>
                        </label>
                        {{ form_row(form.price) }}
                    </div>
                    <div class="form-group col-lg-6 {% if form_errors(form.start_at) %}has-error{% endif %}">
                        <label class="control-label">
                            Date de début <star>*</star>
                        </label>
                        {{ form_row(form.start_at) }}
                    </div>
                    <div class="form-group col-lg-6 {% if form_errors(form.stop_at) %}has-error{% endif %}">
                        <label class="control-label">
                            Date de fin <star>*</star>
                        </label>
                        {{ form_row(form.stop_at) }}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group col-lg-3 {% if form_errors(form.active) %}has-error{% endif %}">
                        <label class="control-label">
                            Activer? <star>*</star>
                        </label>
                        {{ form_row(form.active) }}
                    </div>
                    <div class="form-group col-lg-3 {% if form_errors(form.soldout) %}has-error{% endif %}">
                        <label class="control-label">
                            Complet? <star>*</star>
                        </label>
                        {{ form_row(form.soldout) }}
                    </div>
                     <div class="form-group col-lg-6 {% if form_errors(form.location) %}has-error{% endif %}">
                        <label class="control-label">
                            Localisation <star>*</star>
                        </label>
                        {{ form_row(form.location) }}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group col-lg-12 {% if form_errors(form.imageFile) %}has-error{% endif %}">
                        <label class="control-label">
                            Image d'illustration:
                        </label>
                    </div>
                    <div class="form-group col-lg-12">
                        {% if event.imageName %}
                        <img id="imgPreview" src="{{ vich_uploader_asset(event, 'imageFile') }}" style="height: 20rem;" alt="Illustration">
                        {% else %}
                            <img id="imgPreview" src="{{ asset('build/face.png') }}" style="height: 20rem;" alt="Illustration">
                        {% endif %}
                        {{ form_row(form.imageFile) }}
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="category"><star>*</star> Champs obligatoires</div>
                    <div class="card-footer">
                        <a class="btn btn-danger btn-fill pull-right" href="{{ path('app_event_index') }}" style="margin-left: 1rem;">Annuler</a>
                        <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
        </div>
    </form>
{{ form_end(form) }}
